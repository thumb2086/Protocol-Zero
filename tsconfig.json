{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@renderer/*": [
                "src/renderer/src/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}